## This section refers to the global system wide settings
[DEFAULT]

# This is the global site wide configuration file for pyflag. 
VERSION=@VERSION@

# Database settings
DBUNIXSOCKET=/var/run/mysqld/mysqld.sock  

# Paths
PREFIX=@prefix@
SYSCONF=@sysconfdir@
DATADIR=@datadir@

# icons etc go here
IMAGEDIR=@datadir@/images/

# Path to read flag plugins from
PLUGINS=@pkgpyexec@/plugins

# Paths to some required binaries
MYSQL_BIN=@mysql@

# Path for pyflag binaries
FLAG_BIN=@bin@

#Location to the magic file for use
MAGICFILE=@datadir@/magic:@magic@

#Clamav virus updates:
CLAMDIR=/var/lib/clamav/

# GUI stuff
# 
REFRESH=3
# This forces the HTTP GUI to use GET or POST
HTTPSERVER_PORT=8000
HTTPSERVER_BINDIF=127.0.0.1

PAGESIZE=50
WRAP=80
MAXTREESIZE=13

#
MAX_DATA_DUMP_SIZE=2048

# This can be Menu or AJAX at the moment
THEME=Menu

SMTP_PORTS=25
POP3_PORTS=110
MSN_PORTS=1863

## 
## 
MAX_SESSION_AGE=100000

## The encodings that will be searched on in the index scanner
INDEX_ENCODINGS=['UTF-8','UTF-16LE']

## The 
TABLE_QUERY_TIMEOUT=20

## The total number of workers which will be started with the GUI
WORKERS=1

## How long to maintain SQL caches (in minutes)
DBCACHE_AGE=60

## The size of the sql cache by default (in rows)
DBCACHE_LENGTH=1024

## GeoIP Database: This can be downloaded from http://www.maxmind.com/app/geolitecity
GEOIPDB=@datadir@/GeoLiteCity.dat