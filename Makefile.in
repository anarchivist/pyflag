## Top level include makefile
BIN	= bin/
DIRS	= iosubsys imagingtools/dd_rescue/ raidtools indextools regtools virustools mailtools sources
CLEAN_DIRS = pkg_bin_dist flag_deb bin_dist
PYTHONVER = 2.3
SYSBINS = cjpeg djpeg
PYTHONLIB = /usr/lib/python$(PYTHONVER)/
PYTHONINCL = /usr/include/python$(PYTHONVER)/
PYTHONBIN = `which python$(PYTHONVER)`
DATA_DIR = `grep -i DATA_DIR pyflag/pyflagrc | cut -d= -f2`
MYSQLCOMMAND =./bin_dist/mysql/bin/mysql --socket=bin_dist/mysql/data/pyflag.sock
MISC_LIBS = /usr/lib/libgmp.so.3 /usr/lib/libmysqlclient_r.so.10 /usr/lib/libmagic.so.1
#Package variables 
BASE_DIR = $(shell pwd)
DOC_LIST = CONTRIBUTING README USAGE TODO
PACKAGE_ARCH = i386
EXECUTABLE_SCRIPTS = flash examine.py flag.sh launch.sh gendoc.sh gtk.sh libs/pypst2.py pyflag/nsrl_load.py pyflag/examine.py pyflag/FileFormats/libole2.py pyflag/FlagHTTPServer.py pyflag/FlagGTKServer.py utilities/nsrl_load.sh utilities/whois_load.py utilities/load_dictionary.sh utilities/whois_load.sh utilities/raid_guess.py utilities/update_version.sh utilities/load_regexps.sh utilities/load_regexps.py
PACKAGE_SCRIPTS = DEBIAN/postinst DEBIAN/preinst DEBIAN/postrm DEBIAN/prerm etc/pyflag/debian-start etc/init.d/pyflag
#If the package version is changed, the control file in pkg_files must also
#be changed.
PACKAGE_VERSION = 0.76
